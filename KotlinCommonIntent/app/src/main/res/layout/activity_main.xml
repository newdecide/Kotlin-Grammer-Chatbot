<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity" tools:layout_editor_absoluteY="81dp">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="200dp" app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/imageView_main"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"/>
    <Button
            android:text="웹페이지"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_webpage"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_sms" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_contact"/>
    <Button
            android:text="문자보내기"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_sms"
            app:layout_constraintStart_toEndOf="@+id/button_webpage" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_email" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_album"/>
    <Button
            android:text="이메일"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_email"
            app:layout_constraintStart_toEndOf="@+id/button_sms"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/button_camera"/>
    <Button
            android:text="알림설정"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_alarm"
            android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/button_sms"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <Button
            android:text="연락처"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_contact"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toStartOf="@+id/button_album"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="앨범"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_album"
            app:layout_constraintStart_toEndOf="@+id/button_contact" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toStartOf="@+id/button_camera" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
    <Button
            android:text="카메라"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_camera"
            app:layout_constraintStart_toEndOf="@+id/button_album" app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent"/>
</android.support.constraint.ConstraintLayout>