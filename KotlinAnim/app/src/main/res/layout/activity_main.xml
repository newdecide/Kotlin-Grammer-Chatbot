<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <Button
            android:text="FADE IN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_fade_in"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/button_fade_out"
            app:layout_constraintVertical_chainStyle="spread_inside"/>
    <Button
            android:text="FADE OUT"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_fade_out"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_fade_in"
            app:layout_constraintBottom_toTopOf="@+id/button_blink"/>
    <Button
            android:text="ZOOM IN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_zoom_in"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_blink"
            app:layout_constraintBottom_toTopOf="@+id/button_zoom_out"/>
    <Button
            android:text="BLINK"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_blink"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_fade_out"
            app:layout_constraintBottom_toTopOf="@+id/button_zoom_in"/>
    <Button
            android:text="ZOOM OUT"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_zoom_out"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_zoom_in"
            app:layout_constraintBottom_toTopOf="@+id/button_rotate"/>
    <Button
            android:text="ROTATE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_rotate"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_zoom_out"
            app:layout_constraintBottom_toTopOf="@+id/button_move"/>
    <Button
            android:text="MOVE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_move"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_rotate"
            app:layout_constraintBottom_toTopOf="@+id/button_slide_up"/>
    <Button
            android:text="SLIDE UP"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_slide_up"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toBottomOf="@+id/button_move"
            app:layout_constraintBottom_toTopOf="@+id/button_slide_down"/>
    <TextView
            android:text="Fade In"
            android:layout_width="wrap_content"
            android:layout_height="22dp"
            android:id="@+id/textView_fade_in" app:layout_constraintStart_toEndOf="@+id/button_fade_in"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:visibility="invisible"
            app:layout_constraintHorizontal_bias="0.503"
            app:layout_constraintBottom_toBottomOf="@+id/button_fade_in" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_fade_in" app:layout_constraintVertical_bias="0.444"/>
    <TextView
            android:text="Fade Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_fade_out"
            app:layout_constraintTop_toTopOf="@+id/button_fade_out"
            app:layout_constraintBottom_toBottomOf="@+id/button_fade_out"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_fade_out" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" android:visibility="visible"/>
    <TextView
            android:text="Zoom In"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_zoom_in"
            app:layout_constraintTop_toTopOf="@+id/button_zoom_in"
            app:layout_constraintBottom_toBottomOf="@+id/button_zoom_in"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintVertical_bias="0.344"
            app:layout_constraintStart_toEndOf="@+id/button_zoom_in" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Blink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_blink"
            app:layout_constraintTop_toTopOf="@+id/button_blink"
            app:layout_constraintBottom_toBottomOf="@+id/button_blink"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_blink" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Zoom Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_zoom_out"
            app:layout_constraintTop_toTopOf="@+id/button_zoom_out"
            app:layout_constraintBottom_toBottomOf="@+id/button_zoom_out"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_zoom_out" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.521"
            app:layout_constraintVertical_bias="0.482"/>
    <TextView
            android:text="Rotate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_rotate"
            app:layout_constraintTop_toTopOf="@+id/button_rotate"
            app:layout_constraintBottom_toBottomOf="@+id/button_rotate"
            app:layout_constraintStart_toEndOf="@+id/button_rotate" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.525"
            app:layout_constraintVertical_bias="0.482"/>
    <TextView
            android:text="Move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_move"
            app:layout_constraintTop_toTopOf="@+id/button_move"
            app:layout_constraintBottom_toBottomOf="@+id/button_move"
            app:layout_constraintStart_toEndOf="@+id/button_move" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.526"
            app:layout_constraintVertical_bias="0.517"/>
    <TextView
            android:text="Slide Up"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_slide_up"
            app:layout_constraintTop_toTopOf="@+id/button_slide_up"
            app:layout_constraintBottom_toBottomOf="@+id/button_slide_up"
            app:layout_constraintStart_toEndOf="@+id/button_slide_up" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp" app:layout_constraintHorizontal_bias="0.523"
            app:layout_constraintVertical_bias="0.448"/>
    <Button
            android:text="SLIDE DOWN"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_slide_down"
            app:layout_constraintTop_toBottomOf="@+id/button_slide_up"
            app:layout_constraintBottom_toTopOf="@+id/button_bounce"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <Button
            android:text="BOUNCE"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/button_bounce"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintTop_toBottomOf="@+id/button_slide_down"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"/>
    <TextView
            android:text="Slide Down"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_slide_down" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="@+id/button_slide_down" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/button_bounce" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_slide_down" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.548"/>
    <TextView
            android:text="Bounce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView_bounce"
            app:layout_constraintTop_toTopOf="@+id/button_bounce"
            app:layout_constraintBottom_toBottomOf="@+id/button_bounce"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toEndOf="@+id/button_bounce" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.535"
            app:layout_constraintVertical_bias="0.448"/>
    <android.support.constraint.Guideline
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:layout_constraintGuide_begin="276dp" android:id="@+id/guideline"/>
</android.support.constraint.ConstraintLayout>